{
  "name": "@the-closet/monorepo",
  "version": "1.0.0",
  "keywords": [
    "ethereum",
    "react",
    "uniswap",
    "workspaces",
    "yarn"
  ],
  "private": true,
  "scripts": {
    "d": "turbo run d",
    "dev:s": "turbo run devs",
    "dev:f": "turbo run devf",
    "dev:c": "turbo run devc chain",
    "contract-testing:build": "yarn workspace @the-closet/contract-testing build --max-old-space-size=12288",
    "contract-testing:eject": "yarn workspace @the-closet/contract-testing eject",
    "contract-testing:start": "yarn workspace @the-closet/contract-testing start",
    "contract-testing:test": "yarn workspace @the-closet/contract-testing test",
    "build": "yarn workspace @the-closet/contract-testing build --max-old-space-size=12288",
    "prettier": "yarn workspace @the-closet/contract-testing prettier",
    "chain": "yarn workspace @the-closet/hardhat chain",
    "fork": "yarn workspace @the-closet/hardhat fork",
    "node": "yarn workspace @the-closet/hardhat chain",
    "test": "yarn workspace @the-closet/hardhat test",
    "start": "yarn workspace @the-closet/contract-testing start",
    "startf": "yarn workspace @the-closet/frontend start",
    "compile": "yarn workspace @the-closet/hardhat compile",
    "deploy": "yarn workspace @the-closet/hardhat deploy",
    "verify": "yarn workspace @the-closet/hardhat verify",
    "watch": "yarn workspace @the-closet/hardhat watch",
    "accounts": "yarn workspace @the-closet/hardhat accounts",
    "balance": "yarn workspace @the-closet/hardhat balance",
    "send": "yarn workspace @the-closet/hardhat send",
    "ipfs": "yarn workspace @the-closet/contract-testing ipfs",
    "surge": "yarn workspace @the-closet/contract-testing surge",
    "s3": "yarn workspace @the-closet/contract-testing s3",
    "ship": "yarn workspace @the-closet/contract-testing ship",
    "generate": "yarn workspace @the-closet/hardhat generate",
    "account": "yarn workspace @the-closet/hardhat account",
    "mineContractAddress": "cd packages/hardhat && npx hardhat mineContractAddress",
    "wallet": "cd packages/hardhat && npx hardhat wallet",
    "fundedwallet": "cd packages/hardhat && npx hardhat fundedwallet",
    "flatten": "cd packages/hardhat && npx hardhat flatten",
    "clean": "cd packages/hardhat && npx hardhat clean",
    "run-graph-node": "yarn workspace @the-closet/services run-graph-node",
    "remove-graph-node": "yarn workspace @the-closet/services remove-graph-node",
    "clean-graph-node": "yarn workspace @the-closet/services clean-graph-node",
    "graph-prepare": "mustache packages/subgraph/config/config.json packages/subgraph/src/subgraph.template.yaml > packages/subgraph/subgraph.yaml",
    "graph-codegen": "yarn workspace @the-closet/subgraph graph codegen",
    "graph-build": "yarn workspace @the-closet/subgraph graph build",
    "graph-create-local": "yarn workspace @the-closet/subgraph graph create --node http://localhost:8020/ scaffold-eth/your-contract",
    "graph-remove-local": "yarn workspace @the-closet/subgraph graph remove --node http://localhost:8020/ scaffold-eth/your-contract",
    "graph-deploy-local": "yarn workspace @the-closet/subgraph graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 scaffold-eth/your-contract",
    "graph-ship-local": "yarn graph-prepare && yarn graph-codegen && yarn graph-deploy-local",
    "deploy-and-graph": "yarn deploy && yarn graph-ship-local",
    "theme": "yarn workspace @the-closet/contract-testing theme",
    "watch-theme": "yarn workspace @the-closet/contract-testing watch",
    "postinstall": "husky install"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@graphprotocol/graph-ts",
      "**/@graphprotocol/graph-ts/**",
      "**/hardhat",
      "**/hardhat/**",
      "**/hardhat-ts",
      "**/hardhat-ts/**"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^7.0.2",
    "turbo": "^1.1.4"
  },
  "packageManager": "yarn@1.22.17"
}